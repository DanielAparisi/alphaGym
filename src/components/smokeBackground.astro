<div id="smoke-bg" class="fixed top-0 h-full w-full -z-10 pointer-events-none">
</div>

<script>
  import * as THREE from "three";

  const $bkg = document.getElementById("smoke-bg");

  let w = window.innerWidth;
  let h = window.innerHeight;

  const scene = new THREE.Scene();

  //75 es el angulo de vision
  const camera = new THREE.PerspectiveCamera(75, w / h, 1, 1000);
  camera.position.z = 10;
  scene.add(camera);

  const render = new THREE.WebGLRenderer();
  render.setSize(w, h);
  render.setClearColor(0x333333, 1);

  $bkg?.appendChild(render.domElement);

  const light = new THREE.DirectionalLight(0xffffff, 0.1);
  //posiccion de la luz
  light.position.set(-1, 3, 1); //(X,Y,Z) Z es la profundidad
  scene.add(light);

  const smokeParticles: THREE.Mesh[] = []; //TIPAMOS EL ARAY

  const loader = new THREE.TextureLoader();
  loader.crossOrigin = ""; //evita problemqas al cargar texturas de afuera

  loader.load("/smoke.png", (texture) => {
    //creamos un plano
    const smokeGeo = new THREE.PlaneGeometry(300, 300);

    const smokeMaterial = new THREE.MeshLambertMaterial({
      map: texture,
      transparent: true,
    });

    const NUM_OF_PARTICLES = 300;
    for (let i = 0; i < NUM_OF_PARTICLES; i++) {
      const particle = new THREE.Mesh(smokeGeo, smokeMaterial);

      particle.position.set(
        Math.random() * 500 - 250,
        Math.random() * 500 - 250,
        Math.random() * 1000 - 100,
      );

      particle.rotation.z = Math.random() * 360;

      scene.add(particle);

      smokeParticles.push(particle);
    }
  });

  function resize() {
    console.log("resize");
    h = innerHeight;
    w = innerWidth;
    camera.aspect = w / h;
    camera.updateMatrix(); //Se tiene que ejecutar cada vez que se cambian los parametros de la camera

    render.setSize(w, h); //Actualizamos los parametros
  }

  function animate() {
    requestAnimationFrame(animate);
    smokeParticles.forEach((particle) => {
      particle.rotation.z += 0.001;
    });

    render.render(scene, camera);
  }

  animate();

  window.addEventListener("resize", resize);
</script>
