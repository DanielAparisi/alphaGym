const opiniones = [
  {
    nombre: "Jose Cocera",
    tiempo: "hace 1 año",
    texto:
      "Una atención espectacular. Un muy buen ambiente y tanto Mario como Roberto dos profesionales estupendos",
  },
  {
    nombre: "Clara López",
    tiempo: "hace 11 meses",
    texto:
      "Maravillosa grandes profesionales los dueños y excelentes personas.",
  },
  {
    nombre: "David García",
    tiempo: "hace 1 año",
    texto: "El mejor gym al que puedes ir.",
  },
  {
    nombre: "María Santos",
    tiempo: "hace 6 meses",
    texto:
      "Excelente lugar para entrenar, personal muy atento y profesional. Lo recomiendo ampliamente.",
  },
  {
    nombre: "Carlos Mendez",
    tiempo: "hace 2 meses",
    texto:
      "Mejor que otros gimnasios, ambiente agradable y precio justo. Muy feliz con mi decisión.",
