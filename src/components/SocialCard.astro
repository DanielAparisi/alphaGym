---

<div class="flex gap-6 flex-wrap">
  {
    opiniones.map((opinion) => (
      <div class="flex-shrink-0 w-80 border-l-4 border-primary pl-6 py-4 flex flex-col">
        <div class="flex items-start justify-between mb-4">
          <div class="flex items-center gap-4">
            <div class="w-14 h-14 rounded-full bg-gradient-to-br from-primary to-secondary flex items-center justify-center text-white font-bold text-lg flex-shrink-0">
              {opinion.nombre.charAt(0).toUpperCase()}
            </div>
            <div>
              <h4 class="font-semibold text-primary text-lg">
                {opinion.nombre}
              </h4>
              <p class="text-sm text-gray-400">{opinion.tiempo}</p>
            </div>
          </div>
          <div class="w-8 h-8 text-orange-500 flex-shrink-0">
            {/* Logo aquí */}
          </div>
        </div>
        <div class="flex items-center gap-2 mb-4 ml-0">
          <span class="text-yellow-400 text-lg">★★★★★</span>
          <span class=" text-white text-xs bg-blue-700/30 px-2 py-1 rounded-full flex items-center gap-1">
            <svg fill="currentColor" class="w-3 h-3" viewBox="0 0 20 20">
              <path
                fill-rule="evenodd"
                d="M6.267 3.455a3.07 3.07 0 0 0 1.745-.723 3.066 3.066 0 0 1 3.976 0 3.07 3.07 0 0 0 1.745.723 3.066 3.066 0 0 1 2.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 0 1 0 3.976 3.07 3.07 0 0 0-.723 1.745 3.066 3.066 0 0 1-2.812 2.812 3.07 3.07 0 0 0-1.745.723 3.066 3.066 0 0 1-3.976 0 3.07 3.07 0 0 0-1.745-.723 3.066 3.066 0 0 1-2.812-2.812 3.07 3.07 0 0 0-.723-1.745 3.066 3.066 0 0 1 0-3.976 3.07 3.07 0 0 0 .723-1.745 3.066 3.066 0 0 1 2.812-2.812m7.44 5.252a1 1 0 0 0-1.414-1.414L9 10.586 7.707 9.293a1 1 0 0 0-1.414 1.414l2 2a1 1 0 0 0 1.414 0z"
                clip-rule="evenodd"
              />
            </svg>
            Verificado
          </span>
        </div>
        <p class="text-primary text-base leading-relaxed">{opinion.texto}</p>
      </div>
    ))
  }
</div>
